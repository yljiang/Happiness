<nvd3 id="graph" style="width:100%; height:500px;"options="dashboard.options" data="dashboard.data"></nvd3>

<form class="form" action="/api/scores" method="POST">
  <label for="date">Date</label>
  <input type="date" name="date">
  <label for="score">Score</label>
  <input type="text"  name="score">
  <label for="comment">Comment</label>
  <input type="text"  name="comment">  
  <button type="submit" class="btn btn-submit">Submit</button>
</form>
<table class="table table-striped">
  <tr>
    <th>Day</th>
    <th>Score</th>
    <th>Comment</th>
    <th></th>
  </tr>

  {{#each scores}}
  <tr >
    <td> {{ this.date }} </td>
    <td> {{ this.score }} </td>
    <td> {{ this.comment }} </td>
    <td> Delete </td>
  </tr>
  {{/each}}

</table>
